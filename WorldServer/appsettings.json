{
    "ServiceTimeZone": "UTC",
    "MinWorkerThreads": 120,
    "MinIOThreads": 120,
    "GlobalDbShardCount": 4,
    "serverOptions": {
        "name": "WorldServer",
        "listeners": [
            {
                "ip": "Any",
                "port": "28080",
                "noDelay": true,
                "maxPackageLength": 262144,
                "receiveBufferSize" : 65536,
                "sendBufferSize": 65536
            }
        ]
    },
    "Serilog":
    {
        "Using":
        [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel":
        {
            "Default": "Information",
            "Override":
            {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Mvc": "Warning",
                "Microsoft.AspNetCore.Routing": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel": "Warning",
                "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo":
        [
            {
                "Name": "Console",
                "Args": {
                    "restrictedToMinimumLevel": "Debug"
                }
            },
            {
                "Name": "File",
                "Args":
                {
                    "path": "Logs/log_.log",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}